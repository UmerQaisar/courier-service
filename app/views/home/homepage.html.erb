
<div class="container m-5">

  <h1>Home Page</h1>

  <% if user_signed_in? %>

    <div class="card mt-4" style="width: 18rem;">
      <div class="card-header">
        Current User
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= current_user.email %></li>
        <li class="list-group-item">ID: <%= current_user.id %></li>
        <li class="list-group-item">Created at: <%= current_user.created_at %></li>
      </ul>
    </div>


<% end %>

</div>