
<div class="container" style="margin-top: 40px">

  <% @orders.each do |order| %>

    <div class="row">

      <div class="col-3">
        <div class="card" style="width: 20rem;">
          <div class="card-header">
            Package Details
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= order.package_details %></li>
          </ul>
          <div class="card-header">
            Weight
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= order.weight %></li>
          </ul>
        </div>
      </div>

    </div>

    <h3 style="margin: 20px 0px 10px 0px" >Service Details</h3>

    <div style="width: 20cm">
      <%=  render 'travel_details/travel_detail', locale = {travel_detail: order.travel_detail}%>

    </div>

    <hr class="divider w-50" style="margin-bottom: 40px; margin-top: 40px"></hr>

<% end %>
</div>
